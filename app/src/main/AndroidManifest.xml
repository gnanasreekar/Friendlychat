<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rgs.friendlychat">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.rgs.friendlychat.Chat.ChatScreen" />

        <activity android:name="com.rgs.friendlychat.About"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.rgs.friendlychat.Feedback" />

        <activity android:name="com.rgs.friendlychat.Auth.Signup" />

        <activity android:name="com.rgs.friendlychat.Auth.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.rgs.friendlychat.MainActivity">

        </activity>
    </application>

</manifest>